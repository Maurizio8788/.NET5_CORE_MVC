<h1>Catalogo dei corsi</h1>

@for (int x = 1; x <= 10; x++)
{
    <hr />
    <div class="row course">
        <div class="col-md-1">
            <img src="https://ecipar-rn.it/wp-content/uploads/2018/02/IN-PARTENZA-CORSI-GRATUITI-PER-DISOCCUPATI.jpg" alt="corso" class="img-fluid" width="52" height="52">
        </div>
        <div class="col-md-5">
            <h2>Titolo Corso</h2>
            <author>di Nome autore</author>
        </div>
        <div class="col-md-2 rating">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
        </div>
        <div class="col-md-2 price">
            EUR 10,99 <br /><s>EUR 12,99</s>
        </div>
        <div class="col-md-2 d-flex align-items-center">
            <a asp-action="Detail" asp-route-id="@x" class="btn btn-outline-primary">Dettaglio Corso</a>
        </div>
    </div>
}    